<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/questionnaire_list_item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/item_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_v_margin"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/questionnaire_list_item_partner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Text"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/questionnaire_list_item_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="right"

                android:textStyle="bold"
                android:textSize="@dimen/text_size_normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_v_margin"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/questionnaire_list_item_templates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="left"
                android:text="Text"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/questionnaire_list_item_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:singleLine="true"
                android:gravity="right"
                android:textSize="@dimen/text_size_normal" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>